#include <stdio.h>

int main() {
    // Get three decimal numbers from the user
    int num1, num2, num3;
    printf("Enter the first decimal number: ");
    scanf("%d", &num1);

    printf("Enter the second decimal number: ");
    scanf("%d", &num2);

    printf("Enter the third decimal number: ");
    scanf("%d", &num3);

    // Get user's choice for the order of sequence
    char order;
    printf("Enter 'a' for ascending order or 'd' for descending order: ");
    scanf(" %c", &order);  // Note the space before %c to consume the newline character from the previous input

    // Use conditional statements to sort and print the sequence
    if (order == 'a') {
        if (num1 > num2) {
            int temp = num1;
            num1 = num2;
            num2 = temp;
        }
        if (num2 > num3) {
            int temp = num2;
            num2 = num3;
            num3 = temp;
        }
        if (num1 > num2) {
            int temp = num1;
            num1 = num2;
            num2 = temp;
        }
        printf("Ascending Order: %d, %d, %d\n", num1, num2, num3);
    } else if (order == 'd') {
        if (num1 < num2) {
            int temp = num1;
            num1 = num2;
            num2 = temp;
        }
        if (num2 < num3) {
            int temp = num2;
            num2 = num3;
            num3 = temp;
        }
        if (num1 < num2) {
            int temp = num1;
            num1 = num2;
            num2 = temp;
        }
        printf("Descending Order: %d, %d, %d\n", num1, num2, num3);
    }

    return 0;
}
