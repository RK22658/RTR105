#include <stdio.h>

int main() 
{
    char letter1, letter2;
    printf("Enter the first letter: ");
    scanf(" %c", &letter1);

    printf("Enter the second letter: ");
    scanf(" %c", &letter2);

    char order;
    printf("Enter 'a' for alphabetical order or 'o' for opposite order: ");
    scanf(" %c", &order);

    {
        if (letter1 > letter2) 
        {
            letter1 = letter1 + letter2;
            letter2 = letter1 - letter2;
            letter1 = letter1 - letter2;
        }
    
        if (order == 'a')
        { 
            printf("Alphabet Order for these Letters: \n%c, %c, %c\n", letter1, letter2, letter1);
        }
     else if (order == 'o') 
        {
         printf("Opposite Order for these Letters: \n%c, %c, %c\n", letter1, letter2, letter1);
        }
       
    }

    return 0;
}
